<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fourier_background"
        android:layout_width="match_parent"
        android:layout_height="488dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="200dp"
    android:scaleType="centerInside"
        android:src="@drawable/fourier2"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="-8dp"
        android:contentDescription="TODO" />

    <LinearLayout
        android:id="@+id/general_activity_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-100dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/general_activity_minor_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="460dp"
            android:layout_height="240dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/get_file_button"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:background="@drawable/button_stroke_orange_dark"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/get_file"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/load_botton"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:background="@drawable/button_stroke_orange_dark"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/load_wav"
                android:textColor="@color/white"
                android:textSize="23sp" />

            <Button
                android:id="@+id/rec_botton"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:background="@drawable/button_stroke_orange_dark"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/rec_stop"
                android:textColor="@color/white"
                android:textSize="23sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>